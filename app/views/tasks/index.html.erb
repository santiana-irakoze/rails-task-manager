<div class="container my-5">
  <h1 class="mb-4 text-primary">My Tasks</h1>
  <ul class="list-group">
    <% @tasks.each do |task| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <%= form_with model: task, url: task_path(task), method: :patch, local: true do |f| %>
            <div class="form-check d-inline">
              <%= f.check_box :completed, checked: task.completed, class: "form-check-input", data: { action: "change->form#submit" } %>
              <%= f.label :completed, task.title, class: "form-check-label #{'text-decoration-line-through text-muted' if task.completed}" %>
            </div>
          <% end %>
        </div>
        <div>
          <%= link_to edit_task_path(task), class: "btn btn-sm btn-outline-primary me-2", title: "Edit" do %>
            <i class="fas fa-edit"></i>
          <% end %>
          <%= link_to task_path(task), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger", title: "Delete" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
  <div class="mt-4">
    <%= link_to "+ Add new Task", new_task_path, class: "btn btn-primary" %>
  </div>
</div>
