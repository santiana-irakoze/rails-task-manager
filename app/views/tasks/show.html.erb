<div class="container my-5">
  <h1 class="display-5 text-primary mb-4"><%= @task.title %></h1>
  <p class="alert alert-info"><%= @task.details %></p>
  <div class="card p-4 mb-4">
    <h5 class="card-title">Update Status</h5>
    <%= form_with model: @task, method: :patch, local: true, class: "form-inline" do |form| %>
      <div class="form-check mb-3">
        <%= form.check_box :completed, checked: @task.completed, class: "form-check-input" %>
        <%= form.label :completed, "Completed", class: "form-check-label ms-2" %>
      </div>
      <%= form.submit "Save Changes", class: "btn btn-primary ms-2" %>
    <% end %>
  </div>
  <div class="d-flex justify-content-between">
    <%= link_to "Edit", edit_task_path(@task), class: "btn btn-secondary" %>
    <%= link_to "Delete",
                task_path(@task),
                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                class: "btn btn-danger" %>
    <%= link_to "Back to List", tasks_path, class: "btn btn-outline-primary" %>
  </div>
</div>









